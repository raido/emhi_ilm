<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Some colors -->
    <color name="white">#FFF</color>
    
    <!-- Basic text style -->
    <style name="textStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Station name text styles -->
    <style name="textStyleStation" parent="@style/textStyle">
        <item name="android:textSize">14dp</item>    
    </style>
    
     <!-- Temperature text styles -->
     <style name="textStyleTemp" parent="@style/textStyle">
        <item name="android:textSize">25dp</item> 
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Widget background -->
    <style name="widget_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>
    
</resources>